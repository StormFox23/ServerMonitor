{
  "name": "duneserver",
  "version": "2.0.0",
  "description": "Realtime server monitoring app with Angular 21 & NodeJS",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch src --ext ts,js --ignore dist --exec \"npm run build && node dist/index.js\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev:fast": "tsc --watch & nodemon --watch dist --exec \"node dist/index.js\"",
    "clean": "rimraf dist",
    "test": "echo 'Error: no test specified' && exit 1"
  },
  "keywords": ["server", "monitoring", "realtime", "socket.io", "system", "typescript"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "systeminformation": "^5.21.0",
    "socket.io": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.5.0"
  }
}
